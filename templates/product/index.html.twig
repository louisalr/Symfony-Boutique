{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}

<h1 class="text-center"> Nos produits </h1>

    <div class="row">

        <div class="col-md-3">
            <h1> Filtrer </h1>
            {{ form(form)}}
        </div>
            

        <div class="col-md-9">
            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-4">
                    <div class="product-item text-center">
                        <a href="{{path('app_product', {'id': product.id} )}}"><img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid"></a>
                        <h4> {{ product.name}} </h4>
                        <span class="product-subtitle"> {{product.subtitle}} </span>
                        <span class="product-price">{{product.price / 100|number_format(2)}} â‚¬</span>
                    </div>
                    </div>
                {% endfor %}
        </div>


    </div>


    

{% endblock %}
