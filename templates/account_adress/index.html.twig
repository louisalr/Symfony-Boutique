{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block body %}

<a href="{{ path('app_account_add')}}" class="btn btn-info"> Ajouter une adresse </a>
    <h1> Vous retrouverez toutes vos adresses ici </h1>

    {% if app.user.addresses|length == 0  %}
        <p class="text-center">
        Vous n'avez pas encore d'adresses dans votre compte client.
        <a href="{{ path('app_account_add')}}"> Cliquer ici pour en rajouter une </a></p>


    {% else %}

        <div class="row">
            {% for address in app.user.addresses%}
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ address.name}}</h5>
                    <p class="card-text"> {{address.address}}, <br/>
                        {{address.city}}
                    </p>
                    <a href="{{ path('app_account_edit', { 'id' : address.id} )}}" class="btn btn-primary">Modifier</a> |
                    <a href="{{ path('app_account_delete', {'id' : address.id})}}" class="btn btn-primary">Supprimer</a>
                </div>
                </div>
            </div>
        {% endfor %}
        </div>


    {% endif %}
    <a href="{{ path('app_account')}}"> Retour </a>

{% endblock %}
